spring:
  application:
    name: TUrtleAPI

  datasource:
    url: jdbc:postgresql://database:5432/database
    username:
    password:
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true

  server:
    port: 8080

  logging:
    level:
      org.hibernate.SQL: debug
